<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="745.0" prefWidth="820.0" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.gymify.controllers.ListeDesEvennementsController">
    <VBox prefHeight="763.0" prefWidth="820.0" spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 10px;" VBox.vgrow="ALWAYS">
        <!-- AppBar -->
        <HBox prefHeight="43.0" prefWidth="800.0" style="-fx-background-color: #2e86de; -fx-padding: 15px; -fx-alignment: center; -fx-background-radius: 10px;">
            <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;" text="Liste des Événements" />
        </HBox>

        <!-- Barre de recherche et bouton Ajouter -->
        <HBox spacing="10" style="-fx-padding: 10px; -fx-alignment: center-left;">
            <TextField fx:id="searchField" prefHeight="28.0" prefWidth="359.0" promptText="Rechercher un événement..." style="-fx-pref-width: 300px; -fx-border-radius: 5px; -fx-padding: 5px;" />
            <Button fx:id="btnAjouter" prefHeight="28.0" prefWidth="199.0" style="-fx-background-color: #2e86de; -fx-text-fill: white; -fx-border-radius: 5px; -fx-padding: 5px 10px;" text="Ajouter Événement" />
        </HBox>

        <!-- Liste des événements -->
        <ScrollPane fitToWidth="true" prefHeight="620.0" prefWidth="800.0" style="-fx-background: transparent;">
            <VBox fx:id="vboxEvenements" spacing="15" style="-fx-padding: 15px;" />
        </ScrollPane>
    </VBox>
</AnchorPane>