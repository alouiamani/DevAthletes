<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.gymify.controllers.ListeDesEquipesController">

    <!-- Conteneur principal avec une VBox -->
    <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 10px;" VBox.vgrow="ALWAYS">

        <!-- AppBar avec un fond coloré -->
        <HBox prefHeight="60" style="-fx-background-color: #2e86de; -fx-padding: 15px; -fx-alignment: center;">
            <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;" text="Liste des Équipes" />
        </HBox>

        <!-- Zone défilante contenant la liste des équipes -->
        <ScrollPane fitToWidth="true" prefHeight="600.0" prefWidth="800.0" style="-fx-background: transparent;">
            <VBox fx:id="vboxEquipes" prefHeight="133.0" prefWidth="797.0" spacing="15" style="-fx-padding: 15px;">
            </VBox>
        </ScrollPane>

    </VBox>

</AnchorPane>
