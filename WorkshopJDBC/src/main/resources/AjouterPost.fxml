<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="364.0" prefWidth="401.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AjouterPostController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="105.0" layoutY="14.0" prefHeight="27.0" prefWidth="90.0" text="New Post">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <!-- Titre -->
      <Text layoutX="61.0" layoutY="93.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Title" />
      <TextField fx:id="titleField" layoutX="144.0" layoutY="83.0" prefWidth="200.0" promptText="Enter title" />

      <!-- Contenu -->
      <Text layoutX="61.0" layoutY="174.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Content" />
      <TextArea fx:id="newPost" layoutX="144.0" layoutY="160.0" prefHeight="130.0" prefWidth="200.0" promptText="Write your post content here..." />

      <!-- URL de l'image -->
      <Text layoutX="61.0" layoutY="133.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Image URL" />
      <TextField fx:id="imageUrlField" layoutX="144.0" layoutY="115.0" prefWidth="200.0" promptText="Optional image URL" />

      <!-- Bouton de soumission -->
      <Button fx:id="submitButton" layoutX="295.0" layoutY="319.0" mnemonicParsing="false" onAction="#submitPost" text="Add Post" />
   </children>
</AnchorPane>
