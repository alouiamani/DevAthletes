<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
   <children>
      <AnchorPane layoutX="50.0" layoutY="50.0" prefHeight="300.0" prefWidth="500.0" style="-fx-background-color: #f4f4f4; -fx-background-radius: 10;">
         <children>
            <Label layoutX="200.0" layoutY="30.0" text="Login" textFill="#1e2a3a">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            
            <Label layoutX="100.0" layoutY="100.0" text="Email:" textFill="#1e2a3a">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="emailTextField" layoutX="100.0" layoutY="120.0" prefHeight="30.0" prefWidth="300.0" promptText="Enter your email" style="-fx-background-radius: 5;">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            
            <Label layoutX="100.0" layoutY="160.0" text="Password:" textFill="#1e2a3a">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <PasswordField fx:id="passwordTextField" layoutX="100.0" layoutY="180.0" prefHeight="30.0" prefWidth="300.0" promptText="Enter your password" style="-fx-background-radius: 5;">
               <font>
                  <Font size="14.0" />
               </font>
            </PasswordField>
            
            <Button layoutX="100.0" layoutY="230.0" mnemonicParsing="false" onAction="#LoginButtonOnAction" prefHeight="40.0" prefWidth="300.0" style="-fx-background-color: #1e2a3a; -fx-background-radius: 5;" text="Login" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>

            <Button layoutX="100.0" layoutY="280.0" mnemonicParsing="false" onAction="#signUpLinkOnAction" prefHeight="30.0" prefWidth="300.0" style="-fx-background-color: transparent;" text="Don't have an account? Sign Up" textFill="#1e2a3a">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </children>
</AnchorPane> 