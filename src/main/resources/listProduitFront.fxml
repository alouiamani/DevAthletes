<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800" prefWidth="1200" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.listProduitFront">
    
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
           <HBox alignment="CENTER_LEFT" prefHeight="41.0" prefWidth="1143.0" spacing="10" style="-fx-padding: 20;">
               <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Products" />
               <ComboBox fx:id="categoryFilter" prefWidth="200" promptText="Select Category">
                   <items>
                       <FXCollections fx:factory="observableArrayList">
                           <String fx:value="Tous" />
                           <String fx:value="complement" />
                           <String fx:value="accessoire" />
                       </FXCollections>
                   </items>
               </ComboBox>
               <Region HBox.hgrow="ALWAYS" />
               <Button fx:id="ordersListBtn" onAction="#afficherListeCommande" prefHeight="34.0" prefWidth="88.0" styleClass="nav-button" text="Orders" />
               <Button fx:id="viewCartButton" onAction="#afficherPanier" prefHeight="60.0" prefWidth="54.0" styleClass="cart-button" />
           </HBox>
            <ListView fx:id="listProduits" VBox.vgrow="ALWAYS">
                <placeholder>
                    <Label text="No products available" />
                </placeholder>
            </ListView>
        </VBox>
    </center>
    
    <left>
        <fx:include source="sidebar.fxml" />
    </left>
    
</BorderPane>
