<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" 
      xmlns="http://javafx.com/javafx/21"
      fx:controller="controllers.CheckoutDialogController"
      spacing="20" style="-fx-background-color: white;">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Checkout" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <VBox spacing="10">
        <Label text="Order Summary" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <GridPane vgap="10" hgap="10">
            <Label text="Total Items:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Label fx:id="totalItemsLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            
            <Label text="Subtotal:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Label fx:id="subtotalLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            
            <Label text="Tax (19%):" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <Label fx:id="taxLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            
            <Label text="Total:" style="-fx-font-weight: bold;" 
                   GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <Label fx:id="totalLabel" style="-fx-font-weight: bold;" 
                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        </GridPane>
    </VBox>
    
    <Separator/>
    
    <VBox spacing="10">
        <Label text="Payment Method" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <RadioButton fx:id="cardPayment" text="Credit Card" selected="true">
            <toggleGroup>
                <ToggleGroup fx:id="paymentMethod"/>
            </toggleGroup>
        </RadioButton>
        <RadioButton fx:id="paypalPayment" text="PayPal" toggleGroup="$paymentMethod"/>
    </VBox>
    
    <VBox fx:id="cardDetailsPane" spacing="10">
        <TextField fx:id="cardNumber" promptText="Card Number"/>
        <HBox spacing="10">
            <TextField fx:id="expiryDate" promptText="MM/YY" prefWidth="100"/>
            <TextField fx:id="cvv" promptText="CVV" prefWidth="70"/>
        </HBox>
        <TextField fx:id="cardHolderName" promptText="Cardholder Name"/>
    </VBox>
    
    <Region VBox.vgrow="ALWAYS"/>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" 
                style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        <Button text="Pay Now" onAction="#handlePayment" 
                style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
    </HBox>
</VBox> 