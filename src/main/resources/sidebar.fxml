<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" 
      xmlns="http://javafx.com/javafx/21"
      fx:controller="controllers.SidebarController"
      style="-fx-background-color: #1e2a3a;"
      prefWidth="200">
    
    <padding>
        <Insets top="20" right="10" bottom="20" left="10"/>
    </padding>

    <VBox spacing="10" alignment="TOP_CENTER">
        <Label fx:id="userNameLabel" 
               style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Label fx:id="userRoleLabel" 
               style="-fx-text-fill: #90caf9; -fx-font-size: 14px;"/>
    </VBox>

    <Region VBox.vgrow="ALWAYS" />
    
    <!-- Admin Only Buttons -->
    <VBox spacing="10" fx:id="adminButtons">
        <Button text="Manage Products" 
                onAction="#navigateToProductsAdmin"
                styleClass="sidebar-button"/>
        <Button text="Manage Orders" 
                onAction="#navigateToOrdersAdmin"
                styleClass="sidebar-button"/>
        <Separator style="-fx-background-color: #34495e;"/>
    </VBox>
    
    <!-- Regular User Buttons -->
    <VBox spacing="10" fx:id="userButtons">
        <Button text="Products" 
                onAction="#navigateToProducts"
                styleClass="sidebar-button"/>
        <Button text="Cart" 
                onAction="#navigateToCart"
                styleClass="sidebar-button"/>
        <Button text="Orders" 
                onAction="#navigateToOrders"
                styleClass="sidebar-button"/>
    </VBox>
    
    <Separator style="-fx-background-color: #34495e;"/>
    <Button text="Logout" 
            onAction="#handleLogout"
            styleClass="sidebar-button-logout"/>
</VBox>
