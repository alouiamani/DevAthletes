<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="607.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.gimify.Controllers.SalleCardUserController">
    <stylesheets>
        <URL value="@application.css" />
    </stylesheets>
   <children>
      <HBox layoutX="31.0" layoutY="40.0" prefHeight="190.0" prefWidth="543.0" styleClass="card">
         <children>
            <ImageView fx:id="salleImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" styleClass="image-round">
               <HBox.margin>
                  <Insets right="15.0" />
               </HBox.margin>
            </ImageView>
            <VBox prefHeight="258.0" prefWidth="310.0">
               <children>
                  <Label fx:id="salleName" text="Label" textFill="#114013">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="salleLocation" text="Label">
                     <padding>
                        <Insets bottom="2.0" />
                     </padding>
                  </Label>
                  <Label fx:id="salleDetails" text="Label">
                     <padding>
                        <Insets bottom="2.0" />
                     </padding>
                  </Label>
                  <Label fx:id="salleTel" text="Label" textFill="#d10c0c">
                     <VBox.margin>
                        <Insets bottom="2.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="salleEmail" text="Label" />
                  <Button fx:id="savoirPlusButton" mnemonicParsing="false" onAction="#afficherAbonnement" text=" Savoir Plus">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
