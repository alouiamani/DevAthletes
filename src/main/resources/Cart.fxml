<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<HBox xmlns:fx="http://javafx.com/fxml/1" 
      xmlns="http://javafx.com/javafx/21"
      stylesheets="@styles.css"
      fx:controller="controllers.CartController">
    
    <!-- Include Sidebar -->
    <fx:include source="sidebar.fxml"/>
    
    <!-- Main Content -->
    <VBox spacing="10" HBox.hgrow="ALWAYS">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Shopping Cart" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        </HBox>
        
        <ListView fx:id="cartListView" VBox.vgrow="ALWAYS">
            <placeholder>
                <Label text="Your cart is empty" />
            </placeholder>
        </ListView>
        
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Label fx:id="totalLabel" style="-fx-font-size: 16px;"/>
            <Button fx:id="checkoutButton" text="Checkout" 
                    onAction="#handleCheckout"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        </HBox>
    </VBox>
</HBox> 